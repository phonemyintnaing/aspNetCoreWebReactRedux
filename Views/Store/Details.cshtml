@model InitCMS.Models.Product

@{
    Layout = "~/Views/Shared/_LayoutStore.cshtml";
    ViewData["Title"] = "Product Detail";
}

<div>
    <h5>Product Details</h5>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            <!--  @Html.DisplayNameFor(model => model.ImagePath) -->
        </dt>

        <dd class="col-sm-10">
            <img src="@("~/images/" + Model.ImagePath)" asp-append-version="true" width="250" height="250" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductCategory)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductCategory.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SellPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SellPrice)
        </dd>


    </dl>
</div>
<div> 
    <a asp-action="AddToShoppingCart" asp-route-productId="@Model.Id" asp-controller="ShoppingCart" class="btn btn-success"><i class="fa fa-cart-plus mr-2"></i> Add to cart</a>     <a asp-action="Index" class="btn btn-success">Back to List</a>  
</div>
