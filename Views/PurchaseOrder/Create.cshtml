@model InitCMS.ViewModel.POViewModel

@{
    ViewData["Title"] = "PO Entry";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h6>Purchase Order Entry</h6>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">

            <div class="form-row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col-md-3 mb-2">
                    <label asp-for="RefNumber" class="control-label"></label>
                    <input asp-for="RefNumber" class="form-control" />
                    <span asp-validation-for="RefNumber" class="text-danger"></span>
                </div>
                <div class="col-md-3 mb-2">
                    <label asp-for="SupplierId" class="control-label"></label>
                    <select asp-for="SupplierId" class="form-control" asp-items="ViewBag.SupplierId"></select>
                </div>
                <div class="col-md-3 mb-2">
                    <label asp-for="ProductId" class="control-label"></label>
                    <select asp-for="ProductId" class="form-control" asp-items="ViewBag.ProductId"></select>
                </div>
                <div class="col-md-3 mb-2">
                    <label asp-for="StoreId" class="control-label"></label>
                    <select asp-for="StoreId" class="form-control" asp-items="ViewBag.StoreId"></select>
                </div>
                <div class="col-md-3 mb-2">
                    <label asp-for="Quantity" class="control-label"></label>
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>

                <div class="col-md-3 mb-2">
                    <label asp-for="Cost" class="control-label"></label>
                    <input asp-for="Cost" class="form-control" />
                    <span asp-validation-for="Cost" class="text-danger"></span>
                </div>
                <div class="col-md-3 mb-2">
                    <label asp-for="TotalCost" class="control-label"></label>
                    <input asp-for="TotalCost" class="form-control" />
                    <span asp-validation-for="TotalCost" class="text-danger"></span>
                </div>
                <div class="col-md-3 mb-2">
                    <label asp-for="POStatusId" class="control-label"></label>
                    <select asp-for="POStatusId" class="form-control" asp-items="ViewBag.POStatusId"></select>
                </div>
                <div class="col-md-3 mb-2">
                    <label asp-for="Note" class="control-label"></label>
                    <input asp-for="Note" class="form-control" />
                    <span asp-validation-for="Note" class="text-danger"></span>
                </div>

            </div>

            <div class="form-row">
                <div class="col-md-4 mb-3">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>

        </form>
    </div>
    </div>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
