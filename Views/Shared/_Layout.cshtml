@using Microsoft.AspNetCore.Http;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Init CMS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.21/datatables.min.css" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/buttons/1.6.2/css/buttons.dataTables.min.css" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/tabletools/2.2.4/css/dataTables.tableTools.min.css" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Init CMS</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav">
                        @if (string.IsNullOrEmpty(Context.Session.GetString("SessionEmail")))
                        {


                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Store" asp-action="Index">Store</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="POS" asp-action="Index">POS</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Index">User</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a href="javascript:void(0);" class="nav-link dropdown-toggle text-dark" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">BP Register<span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li class="nav-item"><a asp-controller="Customers" asp-action="Create">New Customer</a></li>
                                    <li class="nav-item"><a asp-controller="Customers" asp-action="Index">Customer List</a></li>
                                    <li class="nav-item"><a asp-controller="Suppliers" asp-action="Create">New Supplier</a></li>
                                    <li class="nav-item"><a asp-controller="Suppliers" asp-action="Index">Supplier List</a></li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a href="javascript:void(0);" class="nav-link dropdown-toggle text-dark" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Product<span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li class="nav-item"><a asp-controller="Products" asp-action="Index">Products</a></li>
                                    <li class="nav-item"><a asp-controller="Categories" asp-action="Index">Categories</a></li>
                                    <li class="nav-item"><a asp-controller="ProductCategories" asp-action="Index">SubCategories</a></li>
                                    <li class="nav-item"><a asp-controller="Brands" asp-action="Index">Brands</a></li>
                                    <li class="nav-item"><a asp-controller="Units" asp-action="Index">Units</a></li>
                                    <li class="nav-item"><a asp-controller="Variants" asp-action="Index">Variants</a></li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a href="javascript:void(0);" class="nav-link dropdown-toggle text-dark" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Stock<span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li class="nav-item"><a asp-controller="Stocks" asp-action="Index">Stock List</a></li>
                                    <li class="nav-item"><a asp-controller="Stocks" asp-action="Create">Stock Adjustment</a></li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a href="javascript:void(0);" class="nav-link dropdown-toggle text-dark" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">PO<span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li class="nav-item"><a asp-controller="PurchaseOrder" asp-action="Index">PO List</a></li>
                                    <li class="nav-item"><a asp-controller="PurchaseOrder" asp-action="Create">PO Entry</a></li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Warehouse" asp-action="Index">Warehouse</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Reports" asp-action="Index">Reports</a>
                            </li>
                        }

                    </ul>

                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            @if (string.IsNullOrEmpty(Context.Session.GetString("SessionEmail")))
                            {
                                @Html.ActionLink("Login", "Login", "Admin")

                            }
                            else
                            {
                                <form method="post" asp-action="Logout" asp-controller="Admin">
                                    <button type="submit" class="nav-link btn nav-link " style="width:auto">
                                        @Context.Session.GetString("SessionEmail") | Logout
                                    </button>
                                </form>
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer">
        <div class="container">
            &copy; 2020 - Init CMS - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- TODO >>>> Insert into project folder-->
    
    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.21/datatables.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/tabletools/2.2.4/js/dataTables.tableTools.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/buttons/1.6.2/js/dataTables.buttons.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/buttons/1.6.2/js/buttons.flash.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/buttons/1.6.2/js/buttons.html5.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/buttons/1.6.2/js/buttons.print.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
