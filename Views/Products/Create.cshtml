@model InitCMS.ViewModel.ProductViewModel

@{
    ViewData["Title"] = "Create Product";
    
}

<h4>Create new Product</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" enctype="multipart/form-data">
            <div class="form-row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col-md-3 mb-2">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" data-val="true" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-md-3 mb-2">
                    <label asp-for="ProductCategoryID" class="control-label"></label>
                    <select asp-for="ProductCategoryID" class="form-control" asp-items="ViewBag.ProductCategoryID"></select>
                </div>
                <div class="col-md-3 mb-2">
                    <label asp-for="CategoryCatId" class="control-label"></label>
                    <select asp-for="CategoryCatId" class="form-control" asp-items="ViewBag.CategoryCatId"></select>
                </div>
                <div class="col-md-3 mb-2">
                    <label asp-for="UnitId" class="control-label"></label>
                    <select asp-for="UnitId" class="form-control" asp-items="ViewBag.UnitId"></select>
                </div>
                <div class="col-md-3 mb-2">
                    <label asp-for="BrandId" class="control-label"></label>
                    <select asp-for="BrandId" class="form-control" asp-items="ViewBag.BrandId"></select>
                </div>
                <div class="col-md-3 mb-2">
                    <label asp-for="VariantId" class="control-label"></label>
                    <select asp-for="VariantId" class="form-control" asp-items="ViewBag.VariantId"></select>
                </div>
                <div class="col-md-3 mb-2">
                    <label asp-for="PCode" class="control-label"></label>
                    <input asp-for="PCode" class="form-control" />
                    <span asp-validation-for="PCode" class="text-danger"></span>
                </div>
                <div class="col-md-3 mb-2">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="col-md-3 mb-2">
                    <label asp-for="LongDesc" class="control-label"></label>
                    <input asp-for="LongDesc" class="form-control" />
                    <span asp-validation-for="LongDesc" class="text-danger"></span>
                </div>
                <div class="col-md-3 mb-2">
                    <label asp-for="PurchasePrice" class="control-label"></label>
                    <input asp-for="PurchasePrice" class="form-control" />
                    <span asp-validation-for="PurchasePrice" class="text-danger"></span>
                </div>
                <div class="col-md-3 mb-2">
                    <label asp-for="SellPrice" class="control-label"></label>
                    <input asp-for="SellPrice" class="form-control" />
                    <span asp-validation-for="SellPrice" class="text-danger"></span>
                </div>
                
                <div class="col-md-3 mb-2">
                    <label asp-for="Photo" class="control-label"></label>
                    <input asp-for="Photo" class="form-control" />
                    <span asp-validation-for="Photo" class="text-danger"></span>
                </div>
            </div>                  
            <div class="form-check">
                <label asp-for="IsSelected" class="control-label"></label>
                <input type="checkbox" asp-for="IsSelected" class="form-check-input">
            </div>
                <div>
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
</form>
    </div>
</div>

<div>
    <a class="btn btn-light" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
