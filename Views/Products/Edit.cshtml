@model InitCMS.ViewModel.ProductEditViewModel
@{
    ViewData["Title"] = "Edit";
}

<h4>Product Edit</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="PhtotPath" />
            <div class="form-group">
                <label asp-for="ProductCategoryID" class="control-label"></label>
                <select asp-for="ProductCategoryID" class="form-control" asp-items="ViewBag.ProductCategoryID"></select>
                <span asp-validation-for="ProductCategoryID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryCatId" class="control-label"></label>
                <select asp-for="CategoryCatId" class="form-control" asp-items="ViewBag.CategoryCatId"></select>
                <span asp-validation-for="CategoryCatId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PCode" class="control-label"></label>
                <input asp-for="PCode" class="form-control" readonly />
                <span asp-validation-for="PCode" class="text-danger"></span> 
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PurchasePrice" class="control-label"></label>
                <input asp-for="PurchasePrice" class="form-control" />
                <span asp-validation-for="PurchasePrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SellPrice" class="control-label"></label>
                <input asp-for="SellPrice" class="form-control" />
                <span asp-validation-for="SellPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Photo" class="control-label" asp-action="Edit"></label>
                <input asp-for="Photo" class="form-control" asp-action="Edit" />
                <span asp-validation-for="Photo" asp-action="Edit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <img src="@("~/images/" + Model.PhtotPath)" asp-append-version="true" width="250" height="250" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
