@model InitCMS.Models.Category

@{
    ViewData["Title"] = "Edit Category";
}


<h5>Edit Category</h5>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CatId" />
            <div class="form-group">
                <label asp-for="CatTitle" class="control-label"></label>
                <input asp-for="CatTitle" class="form-control" />
                <span asp-validation-for="CatTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CatDescription" class="control-label"></label>
                <input asp-for="CatDescription" class="form-control" />
                <span asp-validation-for="CatDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
